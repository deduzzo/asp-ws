          "200": {
            "description": "The requested resource"
          },
          "404": {
            "description": "Resource not found"
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "get": {
          "description": "Ritorna l'assistito",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "tags": [
            "Assistito"
          ],
          "responses": {
