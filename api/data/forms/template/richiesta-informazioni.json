{
  "id": "richiesta-informazioni",
  "title": "Richiesta Informazioni",
  "description": "Compila questo modulo per richiedere informazioni sui servizi ASP di Messina",
  "theme": "healthcare",
  "recaptcha": {
    "enabled": true,
    "version": "v3",
    "action": "submit_richiesta_informazioni"
  },
  "pages": [
    {
      "id": "page-1",
      "title": "I tuoi dati",
      "description": "Inserisci i tuoi dati di contatto",
      "requireAllBeforeNext": true,
      "fields": [
        {
          "id": "nome-completo",
          "type": "text",
          "label": "Nome e Cognome",
          "placeholder": "Mario Rossi",
          "required": true,
          "validation": {
            "type": "text",
            "minLength": 3,
            "maxLength": 100
          }
        },
        {
          "id": "email",
          "type": "text",
          "label": "Indirizzo Email",
          "placeholder": "mario.rossi@example.com",
          "required": true,
          "validation": {
            "type": "email"
          }
        },
        {
          "id": "telefono",
          "type": "text",
          "label": "Numero di Telefono",
          "subtitle": "Prefisso internazionale opzionale",
          "placeholder": "+39 090 123 4567",
          "required": false,
          "validation": {
            "type": "phone"
          }
        },
        {
          "id": "codice-fiscale",
          "type": "text",
          "label": "Codice Fiscale",
          "placeholder": "RSSMRA80A01F158Z",
          "required": false,
          "validation": {
            "type": "text",
            "minLength": 16,
            "maxLength": 16
          }
        }
      ]
    },
    {
      "id": "page-2",
      "title": "La tua richiesta",
      "description": "Specifica l'argomento della tua richiesta",
      "requireAllBeforeNext": true,
      "fields": [
        {
          "id": "argomento",
          "type": "select",
          "label": "Argomento",
          "subtitle": "Seleziona l'argomento principale della richiesta",
          "placeholder": "Scegli un argomento...",
          "required": true,
          "searchable": false,
          "options": [
            {
              "value": "scelta-medico",
              "label": "Scelta/Cambio Medico di Base"
            },
            {
              "value": "prenotazione-visita",
              "label": "Prenotazione Visite ed Esami"
            },
            {
              "value": "fascicolo-sanitario",
              "label": "Fascicolo Sanitario Elettronico"
            },
            {
              "value": "esenzioni",
              "label": "Esenzioni Ticket"
            },
            {
              "value": "certificati",
              "label": "Certificati e Documentazione"
            },
            {
              "value": "assistenza-domiciliare",
              "label": "Assistenza Domiciliare"
            },
            {
              "value": "vaccinazioni",
              "label": "Vaccinazioni"
            },
            {
              "value": "altro",
              "label": "Altro"
            }
          ]
        },
        {
          "id": "messaggio",
          "type": "textarea",
          "label": "Messaggio",
          "subtitle": "Descrivi la tua richiesta in dettaglio",
          "description": "Fornisci tutte le informazioni necessarie per permetterci di rispondere in modo appropriato",
          "placeholder": "Scrivi qui la tua richiesta...",
          "required": true,
          "validation": {
            "type": "text",
            "minLength": 20,
            "maxLength": 2000
          }
        },
        {
          "id": "urgenza",
          "type": "radio",
          "label": "Livello di Urgenza",
          "required": true,
          "options": [
            {
              "value": "bassa",
              "label": "Bassa",
              "description": "Risposta entro 5-7 giorni lavorativi"
            },
            {
              "value": "media",
              "label": "Media",
              "description": "Risposta entro 2-3 giorni lavorativi"
            },
            {
              "value": "alta",
              "label": "Alta",
              "description": "Risposta entro 24 ore"
            }
          ]
        },
        {
          "id": "consenso-privacy",
          "type": "checkbox",
          "label": "Consenso al trattamento dei dati",
          "required": true,
          "options": [
            {
              "value": "privacy-accettata",
              "label": "Accetto l'informativa sulla privacy",
              "description": "Ho letto e accetto l'informativa sul trattamento dei dati personali ai sensi del GDPR"
            }
          ]
        },
        {
          "id": "newsletter",
          "type": "checkbox",
          "label": "Comunicazioni",
          "required": false,
          "options": [
            {
              "value": "newsletter-accettata",
              "label": "Desidero ricevere newsletter informative",
              "description": "Acconsento a ricevere comunicazioni periodiche sui servizi ASP (facoltativo)"
            }
          ]
        }
      ]
    }
  ],
  "submitButton": {
    "text": "Invia Richiesta",
    "loadingText": "Invio in corso..."
  },
  "messages": {
    "success": "Grazie per la tua richiesta! Ti risponderemo al più presto all'indirizzo email fornito.",
    "error": "Si è verificato un errore durante l'invio della richiesta. Riprova o contattaci telefonicamente.",
    "validation": "Compila tutti i campi obbligatori prima di procedere."
  }
}
